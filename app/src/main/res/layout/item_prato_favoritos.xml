<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#ECECEC">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/kitchen_food" />

        <TextView
            android:id="@+id/item_prato_nome_favoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="5"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:text="Nome"
            android:textColor="#471F8F"
            android:textStyle="bold"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/item_prato_descricao_favoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_prato_nome_favoritos"
            android:maxLines="5"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:text="Descrição"
            android:textColor="#471F8F"
            android:textSize="16dp" />

        <View
            android:id="@+id/lista_notas_fundo_gradiente_inferior"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fundo_gradiente_insere_nota"
            app:layout_constraintBottom_toTopOf="@+id/lista_pratos_insere_prato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="317dp"
            android:layout_marginLeft="317dp"
            android:layout_marginTop="99dp"
            app:srcCompat="@drawable/what" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>