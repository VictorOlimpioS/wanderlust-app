<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="#ECECEC">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/kitchen_food" />

        <TextView
            android:id="@+id/item_prato_nome_avaliacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:maxLines="5"
            android:text="Nome"
            android:textColor="#471F8F"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_prato_descricao_avaliacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_prato_nome_avaliacao"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:maxLines="5"
            android:text="Descrição"
            android:textColor="#471F8F"
            android:textSize="16dp" />

        <View
            android:id="@+id/lista_notas_fundo_gradiente_inferior"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fundo_gradiente_insere_nota"
            app:layout_constraintBottom_toTopOf="@+id/lista_pratos_insere_prato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ToggleButton
            android:id="@+id/button_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="196dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/bottom_favorite"
            android:text=""
            android:textOff=""
            android:textOn="" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>