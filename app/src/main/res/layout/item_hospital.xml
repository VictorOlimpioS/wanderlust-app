<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECECEC">

        <TextView
            android:id="@+id/item_hopsital_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:maxLines="5"
            android:text="Nome"
            android:textColor="#471F8F"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_hospital_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_hopsital_nome"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:maxLines="5"
            android:text="Descrição"
            android:textColor="#471F8F"
            android:textSize="15dp" />

        <View
            android:id="@+id/lista_notas_fundo_gradiente_inferior"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/fundo_gradiente_insere_nota"
            app:layout_constraintBottom_toTopOf="@+id/lista_pratos_insere_prato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>